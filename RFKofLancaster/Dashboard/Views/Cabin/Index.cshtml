@model IEnumerable<RFKBackend.Shared.DataContracts.Cabin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Cabins</h2>
<h6>@ViewBag.UserMessage</h6>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CamperCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdultCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.CabinId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CamperCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdultCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.CabinId })
            </td>
        </tr>
    }

</table>
